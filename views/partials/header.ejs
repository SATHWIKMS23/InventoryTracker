<header>
    <nav class="navbar">
        <a href="/" class="logo">Inventory Tracker</a>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <% if (user) { %>
                <li><a href="/Stats">Statistics</a></li>
            <% } %>
        </ul>
    </nav>

    <!-- Buttons below navbar -->
    <div class="nav-buttons">
        <% if (user) { %>
            <a href="/logout" class="btn logout">Logout</a>
        <% } else { %>
            <a href="/login" class="btn login">Login</a>
            <a href="/register" class="btn register">Register</a>
        <% } %>
    </div>
</header>

<style>
/* ---------- General Header ---------- */
header {
    background: #1e293b; /* Dark navy background */
    color: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    padding-bottom: 12px;
}

/* ---------- Navbar ---------- */
.navbar {
    max-width: 1100px;
    margin: 0 auto;
    padding: 18px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.8rem;
    font-weight: 700;
    color: #f9fafb;
    text-decoration: none;
    letter-spacing: 1px;
    transition: color 0.3s ease;
}

.logo:hover {
    color: #38bdf8; /* Sky blue */
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 25px;
    margin: 0;
    padding: 0;
}

.nav-links li a {
    text-decoration: none;
    color: #e2e8f0;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.3s ease;
}

.nav-links li a:hover {
    color: #38bdf8;
}

/* ---------- Buttons Row ---------- */
.nav-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 12px;
}

/* ---------- Button Styles ---------- */
.btn {
    padding: 10px 22px;
    border-radius: 30px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 3px 6px rgba(0,0,0,0.15);
}

/* Login */
.btn.login {
    background: #3b82f6;
    color: #fff;
}
.btn.login:hover {
    background: #2563eb;
    transform: translateY(-2px);
}

/* Register */
.btn.register {
    background: #10b981;
    color: #fff;
}
.btn.register:hover {
    background: #059669;
    transform: translateY(-2px);
}

/* Logout */
.btn.logout {
    background: #ef4444;
    color: #fff;
}
.btn.logout:hover {
    background: #dc2626;
    transform: translateY(-2px);
}

/* ---------- Responsive ---------- */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }
    .nav-links {
        flex-direction: column;
        gap: 12px;
    }
    .nav-buttons {
        flex-direction: column;
        gap: 12px;
    }
}
</style>
